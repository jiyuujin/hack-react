{
  "filters": {},
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
        "space": "always"
      }
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 180
      },
      "max-comma": {
        "max": 8
      }
    },
    "ja-technical-writing/max-kanji-continuous-len": {
      max: 8
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": [
        "./prh.yml"
      ]
    }
  }
}
